<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto my-3">
      <div class="card">
        <div class="card-header">
          <h2 class="text-secondary text-center font-weight-bold">Cálculo de Crédito</h5>
        </div>
        <div class="card-body">
          <form action="/" method="POST">
            <div class="form-group">
              <label>Capital</label>
              <input type="number" class="form-control" name="ammount" placeholder="Monto del capital">
            </div>
            <div class="form-group">
              <label>Tasa</label>
              <input type="number" class="form-control" name="rate" placeholder="Tasa de interés simple">
            </div>
            <div class="form-group">
              <label>Años</label>
              <input type="number" class="form-control" name="years" placeholder="Años">
            </div>
            <div class="form-group"></div>
            <p></p>
            <button type="reset" class="btn btn-primary btn-sm">Borrar datos</button>
            <p></p>
            <button type="submit" class="btn btn-primary">Cálculo del Interés</button>
            
          </form>
        </div>
      </div>
    </div>
  </div>
</div>